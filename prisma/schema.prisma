generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

enum DeliveryStatus {
  ORDERED        // đã đặt hàng
  CONFIRMED      // đã xác nhận đơn hàng
  PREPARING      // đang chuẩn bị hàng
  SHIPPING       // đang vận chuyển
  DELIVERED      // giao hàng thành công
}

enum PaymentMethod {
  COD
  VNPAY
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  fullName  String
  phone     String?  @unique
  address   String?  
  role      Role     @default(USER)
  isActive  Boolean  @default(true)

  orders    Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Customer {
  id        String   @id @default(uuid())
  fullName  String
  phone     String   @unique
  email     String?
  address   String

  orders    Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  slug      String   @unique
  imageUrl  String
  isActive  Boolean  @default(true)
  products  Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id              String   @id @default(uuid())
  name            String
  slug            String   @unique
  sku             String   @unique
  price           Float
  stock           Int      @default(0)
  imagesUrl       String[]
  description     String
  isActive        Boolean  @default(true)

  categoryId      String
  category        Category @relation(fields: [categoryId], references: [id])

  orderItems      OrderItem[]

  collectionItems WebsiteSectionItem[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([categoryId])
}

model Order {
  id                String      @id @default(uuid())
  orderCode         String      @unique
  totalAmount       Float
  status            OrderStatus @default(PENDING)
  deliveryAddress   String
  note              String?
  deliveryStatus    DeliveryStatus @default(ORDERED)

  // Website order
  userId      String?
  user        User?       @relation(fields: [userId], references: [id])

  // Admin order
  customerId  String?
  customer    Customer?   @relation(fields: [customerId], references: [id])

  items       OrderItem[]
  payments    Payment[]

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([userId])
  @@index([customerId])
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  productId String
  quantity  Int
  price     Float

  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

model Payment {
  id       String   @id @default(uuid())
  orderId  String
  amount   Float
  method   PaymentMethod
  paidAt   DateTime       @default(now())

  order    Order          @relation(fields: [orderId], references: [id])

  @@index([orderId])
}

model WebsiteTemplate {
  id            String   @id @default(uuid())
  name          String
  primaryColor  String
  logoUrl       String
  isActive      Boolean  @default(false)

  sections      WebsiteSection[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model WebsiteSection {
  id          String   @id @default(uuid())
  templateId  String

  title       String?
  position    Int

  template    WebsiteTemplate @relation(fields: [templateId], references: [id])
  items       WebsiteSectionItem[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([templateId, position])
}

model WebsiteSectionItem {
  id          String   @id @default(uuid())
  sectionId   String
  productId   String
  position    Int

  section     WebsiteSection @relation(fields: [sectionId], references: [id])
  product     Product        @relation(fields: [productId], references: [id])

  @@unique([sectionId, productId])
  @@index([sectionId, position])
}
