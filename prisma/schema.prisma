generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

enum DeliveryStatus {
  ORDERED        // đã đặt hàng
  CONFIRMED      // đã xác nhận đơn hàng
  PREPARING      // đang chuẩn bị hàng
  SHIPPING       // đang vận chuyển
  DELIVERED      // giao hàng thành công
}

enum PaymentMethod {
  COD
  VNPAY
}

enum NotificationType {
  ORDER
}

enum MediaType {
  FACEBOOK
  INSTAGRAM
  YOUTUBE
  ZALO
  TELEGRAM
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  fullName  String
  phone     String?  @unique
  address   String?
  avatar    String?  
  role      Role     @default(USER)
  isActive  Boolean  @default(true)

  orders    Order[]

  reviews   Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  slug      String   @unique
  imageUrl  String
  isActive  Boolean  @default(true)
  products  Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id              String   @id @default(uuid())
  name            String
  slug            String   @unique
  sku             String   @unique
  price           Float
  stock           Int      @default(0)
  imagesUrl       String[]
  description     String
  isActive        Boolean  @default(true)

  categoryId      String
  category        Category @relation(fields: [categoryId], references: [id])

  orderItems      OrderItem[]

  collectionItems WebsiteSectionItem[]

  ratingAvg       Float    @default(0)
  ratingCount     Int      @default(0)
  reviews         Review[]

  soldCount       Int @default(0)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([categoryId])
}

model SearchKeyword {
  id        String   @id @default(uuid())
  title     String   @unique
  count     Int      @default(0)
  createdAt DateTime @default(now())
}

model Review {
  id        String   @id @default(uuid())

  rating    Int      // 1 → 5
  comment   String
  imagesUrl String[]

  productId String
  userId    String

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([productId, userId]) // 1 user chỉ được review 1 lần / product
  @@index([productId])
  @@index([userId])
}

model Order {
  id                String      @id @default(uuid())
  orderCode         String      @unique
  totalAmount       Float
  status            OrderStatus @default(PENDING)
  fullName          String
  phone             String
  deliveryAddress   String
  note              String?
  deliveryStatus    DeliveryStatus @default(ORDERED)

  // Website order
  userId      String
  user        User       @relation(fields: [userId], references: [id])

  items       OrderItem[]
  payments    Payment[]

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([userId])
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  productId String
  quantity  Int
  price     Float

  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

model Payment {
  id       String   @id @default(uuid())
  orderId  String
  amount   Float
  method   PaymentMethod
  paidAt   DateTime       @default(now())

  order    Order          @relation(fields: [orderId], references: [id])

  @@index([orderId])
}

model WebsiteTemplate {
  id                String   @id @default(uuid())
  name              String
  primaryColor      String
  logoUrl           String
  bannersUrl        String[]
  email             String?
  phone             String?
  footerDescription String?
  isActive          Boolean  @default(false)

  medias            WebsiteMedia[]
  sections          WebsiteSection[]

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model WebsiteMedia {
  id          String          @id @default(uuid())
  templateId  String
  
  type        MediaType
  url         String

  template    WebsiteTemplate @relation(fields: [templateId], references: [id])

  @@index([templateId])
}

model WebsiteSection {
  id          String   @id @default(uuid())
  templateId  String

  title       String?
  position    Int

  template    WebsiteTemplate @relation(fields: [templateId], references: [id])
  items       WebsiteSectionItem[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([templateId, position])
}

model WebsiteSectionItem {
  id          String   @id @default(uuid())
  sectionId   String
  productId   String
  position    Int

  section     WebsiteSection @relation(fields: [sectionId], references: [id])
  product     Product        @relation(fields: [productId], references: [id])

  @@unique([sectionId, productId])
  @@index([sectionId, position])
}

model Notification {
  id          String            @id @default(uuid())
  type        NotificationType
  itemId      String
  message_vi  String
  message_en  String
  isSeen      Boolean           @default(false)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}

model Faq {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Store {
  id        String   @id @default(uuid())
  name      String
  address   String
  hotline   String
  email     String
  taxCode   String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}